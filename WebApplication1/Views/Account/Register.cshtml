
@model WebApplication1.AccountUser.UserRegister
@{
    ViewData["Title"] = "Регистрация";
}

<html>
    <body>
        <div class="container">
            <div class="row" style="text-align:center;margin:0 400px;">
                <div>
                    <h3 class="text-center">Регистрация</h3>

                    <form asp-action="Register" asp-antiforgery="true" class="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-xs-12" style="padding:10px 0">
                            <div class="form-group">
                                <input asp-for="@Model.LoginUser" class="form-control" placeholder="Логин" />
                            </div>
                        </div>

                        <div class="col-xs-12" >
                            <div class="form-group">
                                <input asp-for="@Model.PasswordUser" class="form-control" placeholder="Пароль" />
                            </div>
                        </div>

                        <div class="col-xs-12" style="padding:10px 0">
                            <div class="form-group">
                                <input asp-for="@Model.ReturnPasswordUser" class="form-control" placeholder="Продублируйте пароль" />
                            </div>
                        </div>

                        <div class="text-center col-xs-12">
                            <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </body>
</html>

