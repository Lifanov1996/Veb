@model PersonModel
@{
    ViewData["Title"] = "Веб сайт на с#";
}

<div class="text-center">
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Id</font></font></th>
      <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Фамилия </font></font></th>
      <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Имя</font></font></th>
      <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Отчество</font></font></th>
    </tr>
  </thead>
  <tbody>
      @foreach(var client in Model.PersonCollectoin)
      {
        <tr class="table-warning">
          <th scope="row"><button type="button" class="btn btn-hover"><font style="vertical-align: inherit ;"><font style="vertical-align: inherit;">@client.Id</font></font></button></th>
          <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@client.LastName</font></font></td>
          <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@client.FirstName</font></font></td>
          <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@client.Patronymic</font></font></td>
        </tr>
      }
    </tbody>
  </table>
</div>
